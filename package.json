{
  "name": "resilient-email-service",
  "version": "1.0.0",
  "description": "A resilient email sending service with retry logic, fallback, and rate limiting",
  "main": "src/index.js",
  "scripts": {
    "start": "node server/web-server.js",
    "test": "jest --config jest-js.config.js",
    "test:watch": "jest --watch --config jest-js.config.js",
    "server": "node server/web-server.js",
    "build-css": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --watch",
    "dev": "npm run build-css & npm run server"
  },
  "keywords": [
    "email",
    "service",
    "resilient",
    "javascript",
    "retry",
    "fallback"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "autoprefixer": "^10.4.21",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "ejs": "^3.1.10"
  }
}
